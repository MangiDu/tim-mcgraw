.doc-section
  position: relative
  margin-top: 10px
  &:first-child
    margin-top: 0
  .section-label
    position: absolute
    top: 0
    left: 0
    padding-right: 10px
    width: 80px
    text-align: right
  .section-content
    margin-left: 80px

.section-content
  input, textarea
    width: 100%
  textarea
    resize: none

.section-shower
  textarea
    width: 100%
    height: 400px
    resize: none
