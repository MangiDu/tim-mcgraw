.select-input
  position: relative
  ul.list
    position: absolute
    z-index: 9
    top: 20px
    left: 0
    width: 100%
    border: 1px solid color-border
    background-color: color-fg
    li.item
      padding: 0 5px
      cursor: pointer
      &:hover
        background-color: lighten(color-bg, 60%)
      &.active
        background-color: lighten(color-bg, 20%)
