.doc-section
  position: relative
  margin-top: 10px
  &:first-child
    margin-top: 0
  .section-label
    position: absolute
    top: 0
    left: 0
    padding-right: 10px
    width: 80px
    text-align: right
  .section-content
    margin-left: 80px
    margin-right: 40px
  .section-operations
    position: absolute
    top: 0
    right: 0
    width: 40px
    text-align: center
    .close
      display: inline-block
      border-radius: 4px
      width: 16px
      height: 16px
      margin: 2px
      position: relative
      background-color: color-danger
      cursor: pointer
      transition: all 0.2s
      &:hover
        transform: rotate(180deg)
      &:before, &:after
        content: ' '
        position: absolute
        top: 50%
        left: 50%
        display: inline-block
        background-color: color-fg
        border-radius: 2px
        width: 80%
        height: 2px
      &:before
        transform: translate(-50%, -50%) rotate(45deg)
      &:after
        transform: translate(-50%, -50%) rotate(-45deg)

.section-content
  .input-wrapper
    input, textarea
      width: 100%
    textarea
      height: 100%
      resize: none

.sections-operations
  margin-top: 10px
  text-align: center

.section-shower
  textarea
    width: 100%
    height: 300px
    resize: none

  .preview
    border-radius: radius-wrapper
    border: 1px solid #eee
    margin: 0
    padding: 10px
    min-height: 380px
    overflow: overlay
    white-space: pre-wrap
    font-size: 14px
    line-height: 1.2
    background-color: #4b4b4b
    color: #f9f9f9

.form-control
  display: flex
  flex-flow: nowrap
  align-content: stretch
  margin-top: 10px
  &:first-child
    margin-top: 0
  > label
    display: inline-block
    border: 1px solid color-border
    border-right: none
    border-radius: radius-input 0 0 radius-input
    width: 80px
    text-align: center
    background-color: color-bg
  > .input-wrapper
    flex: 1
    input, textarea
      border-top-left-radius: 0
      border-bottom-left-radius: 0
    &.ivu-radio-group
      display: flex
      .ivu-radio-group-item
        flex: 1
        &:first-child
          border-top-left-radius: 0
          border-bottom-left-radius: 0
        &.ivu-radio-wrapper-checked
          background-color: color-focus
          color: color-fg
